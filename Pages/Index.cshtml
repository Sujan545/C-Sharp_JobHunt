@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<section class="hero text-center py-5 bg-light">
    <div class="container">
        <h1 class="display-4 fw-bold">Find Your Dream Job</h1>
        <p class="lead text-muted">Browse thousands of jobs from top companies</p>

        <div class="d-flex justify-content-center mt-4">
            <input class="form-control w-50 me-2" placeholder="Search job title or company..." />
            <button class="btn btn-primary">Search</button>
        </div>
    </div>
</section>

<section class="container mt-5">
    <h3 class="mb-4">Why Use JobHunt?</h3>
    <div class="row">
        <div class="col-md-4">
            <h5>🔥 Top Companies</h5>
            <p>Get access to jobs from trusted companies.</p>
        </div>
        <div class="col-md-4">
            <h5>⚡ Fast Apply</h5>
            <p>Apply to jobs in just one click.</p>
        </div>
        <div class="col-md-4">
            <h5>🌍 Remote Friendly</h5>
            <p>Find remote and flexible jobs.</p>
        </div>
    </div>
</section>
